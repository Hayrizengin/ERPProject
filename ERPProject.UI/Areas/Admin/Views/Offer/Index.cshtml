    function Doldur1() {

        var selectedCompanyId = $("#inputRequestIdDetay1").val();
        $.ajax({
            url: "https://localhost:7075/GetOfferByjs/" + selectedCompanyId,
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader('Authorization', `Bearer ${token}`);
            },
            success: function (data) {
                $("#doldur1").empty();
                var html = `
            <div class="table100 ver5 m-b-110" style="align-content:start;">
            <div class="table100-head">
            <table>
            <thead>
            <tr class="row100 head">
            <th class="cell100 column2 text-light opacity-75">Firma</th>
            <th class="cell100 column2 text-light opacity-75">Teklif</th>
            <th class="cell100 column2 text-light opacity-75">Açıklama</th>
            <th class="cell100 column2 text-light opacity-75">Durum</th>
            </tr>
            </thead>
            </table>
