    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
@{
    var name1 = TempData["HATA"] as string;
}
<section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
    <div class="video-wrap">
        <video autoplay="" loop="" muted="" class="custom-video" poster="">
            <source src="~/videos/video.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
</section>
<div class="container d-flex justify-content-center align-items-center" style="width:100%;height:100vh;">
    <div class="">
        <img src="/Admin/img/GirisLogo.png" width="550" height="150">
        <form action="/Home/ForgotPassword" method="post">
            <h1 class="" style="color:#EC2029;">Şifre Sıfırlama</h1>
            <p class="" style="color:#EC2029;"><strong>Email adresinize gönderilen link ile şifrenizi sıfırlayabilirsiniz!!!</strong></p>
            <div class="input-group mb-3">
                <span class="input-group-text" style="color:#EC2029;">
                    <i class="bi bi-envelope-at-fill"></i>
                </span>
                <input class="form-control" name="mail" autofocus type="email" placeholder="Email..." required>
            </div>
            <div class="text-danger">
                @name1
            </div>
            <div class="row">
                <div class="col">
                    <div class="col-6">
                        <button class="btn px-4" style="background-color:#ec2029; color:white;"  type="submit">Şifre Sıfırla</button>
                    </div>
                </div>
                <div class="col">
                    <div class="col-12">
                        <a class="text-danger px-4 text-decoration-none" style="color:#EC2029;" href="/"><strong>Giriş Yap!</strong></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<style>
    .video-wrap {
        z-index: -100;
    }

    .custom-video {
        position: absolute;
        top: 0;
        left: 0;
        object-fit: cover;
        width: 100%;
        height: 100vh;
    }
    ::placeholder{
        color:#EC2029 !important;
    }
</style>